	$(CORE_SRC_DIR)/input.c \
	$(CORE_SRC_DIR)/memory.c \
	$(CORE_SRC_DIR)/pbi.c \
	$(CORE_SRC_DIR)/pia.c \
	$(CORE_SRC_DIR)/pokey.c \
	$(CORE_SRC_DIR)/pokeysnd.c \
	$(CORE_SRC_DIR)/rtime8.c \
	$(CORE_SRC_DIR)/screen.c \
	$(CORE_SRC_DIR)/sio.c \
	$(CORE_SRC_DIR)/sound_nds.c \
	$(CORE_SRC_DIR)/statesav.c \
